<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:setting="http://schemas.android.com/apk/res/com.project.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />
	<com.project.mobilesafe.view.SettingItemView
	    android:id="@+id/siv_update"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    setting:set_title="自动更新设置"
	    setting:desc_on="自动更新已开启"
	    setting:desc_off="自动更新已关闭"
	    />
	<com.project.mobilesafe.view.SettingItemView
	    android:id="@+id/siv_address"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    setting:set_title="电话归属地显示设置"
	    setting:desc_on="归属地显示已经开启"
	    setting:desc_off="归属地显示已经关闭"
	    />
	<com.project.mobilesafe.view.SettingClickView
	    android:id="@+id/scv_address_style"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
	<com.project.mobilesafe.view.SettingClickView
	    android:id="@+id/scv_address_location"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
	<com.project.mobilesafe.view.SettingItemView
		android:id="@+id/siv_callsafe"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		setting:set_title="黑名单服务设置"
		setting:desc_on="黑名单服务已经开启"
		setting:desc_off="黑名单服务已经关闭"
		/>
    
</LinearLayout>